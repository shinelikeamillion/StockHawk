<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">@dimen/text_size_for_percent_change</item>
        <item name="android:textColor">@color/colorPrice</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">@dimen/text_size_for_bid_price</item>
        <item name="android:textColor">@color/colorPrice</item>
    </style>

    <style name="StockNameTextStyle">
        <item name="android:textSize">@dimen/text_size_for_stock_name</item>
        <item name="android:textColor">@color/colorName</item>
    </style>

    <style name="SymbolAndExchangeName">
        <item name="android:textSize">@dimen/text_size_for_symbolandexchengname</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="PercentChangeForWidgetTextStyle">
        <item name="android:textSize">@dimen/text_size_for_widget_change</item>
        <item name="android:textColor">@color/colorPrice</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceForWidgetTextStyle">
        <item name="android:textSize">@dimen/text_size_for_widget_price</item>
        <item name="android:textColor">@color/colorPrice</item>
    </style>

    <style name="StockNameForWidgetTextStyle">
        <item name="android:textSize">@dimen/text_size_for_widget_name</item>
        <item name="android:textColor">@color/colorName</item>
    </style>

    <style name="SymbolAndExchangeNameForWidgetTextStyle">
        <item name="android:textSize">@dimen/text_size_for_widget_exchangename</item>
        <item name="android:textColor">@color/colorPrice</item>
    </style>
</resources>
