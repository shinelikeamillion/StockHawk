<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="StockNameTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="SymbolAndExchangeName">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="PercentChangeForWidgetTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceForWidgetTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="StockNameForWidgetTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#424242</item>
    </style>

    <style name="SymbolAndExchangeNameForWidgetTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
    </style>
</resources>
